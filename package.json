{
  "name": "memo-mono",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.11",
      "alchemy": "^0.81.2",
      "@cloudflare/workers-types": "^4.20251213.0",
      "elysia": "^1.4.7",
      "@elysiajs/cors": "^1.1.1",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "@orpc/client": "^1.12.2",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22",
      "drizzle-orm": "^0.45.1",
      "neverthrow": "^8.2.0"
    }
  },
  "type": "module",
  "scripts": {
    "check": "oxlint && oxfmt --write",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "alchemy dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @memo-mono/db db:push",
    "db:studio": "turbo -F @memo-mono/db db:studio",
    "db:generate": "turbo -F @memo-mono/db db:generate",
    "db:migrate": "turbo -F @memo-mono/db db:migrate",
    "db:local": "turbo -F @memo-mono/db db:local",
    "deploy": "alchemy deploy",
    "destroy": "alchemy destroy"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "oxlint": "^1.34.0",
    "oxfmt": "^0.19.0",
    "typescript": "catalog:",
    "@types/node": "catalog:",
    "alchemy": "catalog:",
    "@cloudflare/workers-types": "catalog:"
  },
  "packageManager": "bun@1.3.0"
}
